<table class="table table-hover">
	<thead>
		<tr>
			<th>Quantity</th>
			<th>Product</th>
			<th>Price</th>
		</tr>
	</thead>
	<% @cart.items.each do |item| %>
		<tr>
			<td><%= item.quantity %></td>
			<td>
				<%= link_to item.product.name, item.product %><br>
				<%= image_tag item.product.image.thumb %>
			</td>
			<td><%= number_to_currency item.total_price %></td>
		</tr>
	<% end %>
</table>

<div class="row">
	<div class="col-md-2 col-md-offset-10">
		<tfoot>
			<tr>
				<td class="text-right">
					<strong>
						Total: <%= number_to_currency @cart.total_price %>
					</strong>
					<p><%= link_to "Checkout", checkout_cart_path, class: "btn btn-primary" %></p>
				</td>
			</tr>
		</tfoot>
	</div>
</div>
		
