<table class="table table-hover">
	<thead>
		<tr>
			<th>Quantity</th>
			<th>Product</th>
			<th>Price</th>
		</tr>
	</thead>
	<% @cart.items.each do |item| %>
		<tr>
			<td><%= item.quantity %></td>
			<td>
				<%= link_to item.product.name, item.product %><br>
				<%= image_tag item.product.image.thumb %>
			</td>
			<td><%= number_to_currency item.total_price %></td>
		</tr>
	<% end %>
</table>

<p><%= number_to_currency @cart.total_price %></p>